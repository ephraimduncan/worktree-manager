{
  "name": "worktree-manager",
  "version": "0.1.0",
  "description": "A beautiful TUI for managing git worktrees - like lazygit, but for worktrees",
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "worktree-manager": "./dist/index.js",
    "wt-manager": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "build:binary": "bun build src/index.tsx --compile --outfile worktree-manager",
    "start": "bun run src/index.tsx"
  },
  "keywords": [
    "git",
    "worktree",
    "tui",
    "terminal",
    "cli",
    "lazygit",
    "opentui"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/worktree-manager"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.27",
    "@opentui/react": "^0.1.27",
    "react": "^19.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}